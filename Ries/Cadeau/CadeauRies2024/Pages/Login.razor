@layout LoginLayout
@inject NavigationManager NavigationManager
<link rel="stylesheet" href="/css/app.css">
@using CadeauRies2024.models


@page "/"

<div class="container center" style="height: 100vh;">
    <div class="row h-100 align-items-center">
        <div class="col-lg-6">
            <img src="/images/CocaCola_Main-img.jpg" class="img-fluid" alt="">
        </div>
        <div class="col">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input @bind="email" type="email" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input @bind="wachtwoord" type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <button @onclick="Check" class="btn btn-danger">Submit</button>
            <p class="mt-3 text-danger fs-5">@Feedback</p>
        </div>
    </div>
</div>


@code
{
    string email = "riesgladines@gmail.com";
    string wachtwoord = "";
    string Feedback = "";
    Loginries login;
    protected override async Task OnInitializedAsync()
    {
        login = new Loginries(email, wachtwoord, Feedback, NavigationManager);
    }

    public void Check()
    {
        Feedback = login.CheckLogin(wachtwoord);
    }


}